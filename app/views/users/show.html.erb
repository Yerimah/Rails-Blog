<section>
  <%= render partial: "shared/user", locals: {user: @user} %>
  <div class="user-bio">
    <h4>Bio:</h4>
    <p><%= @user.bio %></p>
  </div>
</section>
<section>
  <ul>
    <% @user.recent_posts.each do |post| %>
      <%= link_to user_post_path(@user.id, post.id) do %>
        <li class="card">
          <h4><%= post.title%></h4>
          <hp><%= post.text%></p>
          <div class="sub-items">
            <span>Comments: <%= post.comments_counter || 0 %></span>
            <span>Likes: <%= post.likes_counter || 0 %> </span>
          </div>
        </li>
        <% end %>
    <% end %>
  </ul>
<div class="btn">

  <%= link_to "See all posts", user_posts_path(@user.id) %>
</div>
</section>
